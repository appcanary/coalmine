<section id="onboarding" style="padding-top: 10px;">
  <div class="col-sm-3">
    <div class=" sidemenu">
      <div class="sidewrapper">
        <div style="margin-top: 20px;">
          <%= image_tag "canary-letter.medium.png", :style => "width: 150px" %>
        </div>


        <ul class="nav nav-pills nav-stacked">
          <li><h2>Settings</h2></li>
          <li><a href="#account">Account</a></li>
          <li><a href="#subscription">Subscription</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <a name="account" class="anchor-offset"></a>
    <h2>Account</h2>
    <div class="user_api">
      <h4>API token</h4>
      <code>
        <%= @user.agent_token %></code>
      <br/>
      <br/>
    </div>

    <section>
      <div class="col-sm-6">

        <%= form_for @user, url: settings_path do |f| %>

          <%= f.label :email %>
          <div class="form-group">
            <%=f.text_field :email, :class => "form-control" %>
          </div>

          <div class="form-group">
            <%=f.submit "Change email", :class => "btn btn-default" %>
          </div>

          <%= f.label :password %>

          <div class="form-group">
            <%=f.password_field :password, :class => "form-control", :placeholder => "New password" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm password" %>
          </div>
          <div class="form-group">
            <%=f.submit "Change password", :class => "btn btn-default" %>
          </div>
        <% end %>
      </div>
    </section>
    <section>
      <a name="subscription" class="anchor-offset"></a>
      <%= render :partial => "settings/subscription" %>
    </section>
  </div>
</section>
