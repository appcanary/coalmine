<div class="col-sm-6">
  <%= form_for @user, url: billing_path, :method => :put, html: { id: "payment-form", class: 'basic' } do |f| %>

    <span class="payment-errors"></span>
    <div class="card-wrapper" style="width: 350px"></div>

    <div class="level">
      <div class="field cc-number">
        <label>Card Number</label>
        <input type="text" class="text" size="20" maxlength="20" name="number" data-stripe="number"/>
      </div>
    </div>

    <div class="level">
      <div class="field cc-name">
        <label>Name (as appears on card)</label>
        <input type="text" class="text" size="20" maxlength="255" name="name" data-stripe="name"/>
      </div>
    </div>

    <div class="level">
      <div class="field cc-mm">
        <label>
          Expiry
        </label>
        <input type="text" class="text" size="7" maxlength="7" name="expiry"/>
      </div>

      <div class="field cc-cvc">
        <label>
          CVC
        </label>
        <input type="text" class="text" size="4" maxlength="4" name="cvc" data-stripe="cvc"/>
      </div>

    </div>

    <div class="form-group buttons">
      <button type="submit" class="btn btn-default submit">Submit Credit Card</button>
    </div>
  <% end %>
</div>
