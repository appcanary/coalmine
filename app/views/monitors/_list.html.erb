<table class="dashboard table table-striped datatables monitors">
  <thead>
    <th>
    </th>
    <th>
      name
    </th>
    <th>
      platform
    </th>
    <th>
      updated
    </th>
    <th>
    </th>
  </thead>

  <% monitors.each do |bundlepres| %>
    <tr>
      <td class="icon" data-order="<%=  bundlepres.vulnerable? ? 1 : 0%>">
        <% if bundlepres.vulnerable? %>
          <span class="fa fa-exclamation-triangle warn"></span>
        <% else %>
          <span class="fa fa-check-circle okay"></span>
        <% end %>

      </td>

      <td>
        <%= link_to bundlepres.display_name, monitor_path(bundlepres) %>
      </td>

      <td>
        <%= monitor_kind_label(bundlepres) %>
      </td>

      <td data-order="<%= bundlepres.updated_at.to_i %>">
        <%= "#{time_ago_in_words bundlepres.created_at} ago" %>
      </td>
      <td>
        <%=link_to('delete', monitor_path(bundlepres), method: :delete, class: 'btn btn-danger btn-tiny', data: {confirm: "Are you sure you want to delete this monitor?"}) %>
      </td>
    </tr>
  <% end %>
</table>
