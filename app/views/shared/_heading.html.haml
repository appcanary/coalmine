.heading
  %h3
    %span=link_to "My Servers", dashboard_path
    - if @server
      \/
      %span.avatar= avatar(@server)
      %span.name= @server.name
      \/

      - unless @app
        %span Apps
      - else
        %span=link_to "apps", server_path(@server)
        \/
        %span.name= @app.short_path
        \/
        %span Packages

    - if @vuln
      | vulnerabilities /
      =  truncate @vuln.title, length: 50
