<%= form_for(@admin_subscription_plan, :url => [:admin, @admin_subscription_plan]) do |f| %>

  <% if @admin_subscription_plan.errors.any? %>
    <div class="error_explanation" role="alert">
      <h4>Oops. We encountered an error:</h4>

      <ul>
        <% @admin_subscription_plan.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="col-sm-6">
    <div>
      <%= f.label :label %>
      <div class="form-group">
        <%= f.text_field :label, :class => "form-control" %>
      </div>
    </div>

    <div>
      <%= f.label :value %>
      <div class="form-group">
        <%= f.text_field :value, :class => "form-control" %>
      </div>
    </div>

    <div>
      <%= f.label :unit_value %>
      <div class="form-group">
        <%= f.text_field :unit_value, :class => "form-control" %>
      </div>
    </div>

    <div>
      <%= f.label :limit %>
      <div class="form-group">
        <%= f.text_field :limit, :class => "form-control" %>
      </div>
    </div>

    <div>
      <%= f.label :comment %>
      <div class="form-group">
        <%= f.text_field :comment, :class => "form-control" %>
      </div>
    </div>


    <div class="form-group">
      <%= f.submit :class => "btn btn-default" %>
    </div>
  </div>
<% end %>
