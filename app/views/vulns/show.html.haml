= render :partial => 'shared/heading'
%section
  .col-sm-12
    %dl.vulnerability

      %dt Package:
      %dd= @vuln.artifact_name

      %dt Kind:
      %dd= @vuln.kind

      %dt Title:
      %dd.title= @vuln.title

      %dt CVE:
      %dd= link_to(@vuln.cve_id, @vuln.cve_url, target: 'blank')

      - if @vuln.osvdb.present?
        %dt OSVDB:
        %dd= link_to(@vuln.osvdb_id, @vuln.osvdb_url, target: "blank")

      %dt Description:
      %dd
        - @vuln.description.each_line do |str|
          = str
          <br/>

      - if @vuln.criticality_name
        %dt Criticality:
        %dd= @vuln.criticality_name

      %dt Patched Versions:
      %dd
        %pre{style: "border: none;"}
          - @vuln.patched_versions.each do |vers|
            = vers
            <br/>

