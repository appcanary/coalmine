= render :partial => "shared/heading"

.server

  %table.apps
    - if @server.apps.blank?
      .empty_message 
        No apps were found on this server. 
        =link_to "Click here for instructions.", onboarding_path
    - else
      -@server.apps.each do |app|
        %tr.app
          %td.status
            -if app.vulnerable?
              %span.fa.fa-exclamation-triangle.warn
            -else
              %span.fa.fa-check-circle.okay
          %td.link
            %a{href: server_app_path(@server, app)}
              %span.title
                =app.path
              %span.info
                updated
                %span.data=time_ago_in_words @server.last_heartbeat_at
                ago
