.heading
  %h3
    %span=link_to "My Servers", dashboard_path
    \/
    %span.name Acme
    \/
    %span Apps
.server

  %table.apps
    -rand(2..3).times do
      %tr.app
        %td.status
          -if rand(2) == 1
            %span.fa.fa-exclamation-triangle.warn
          -else
            %span.fa.fa-check-circle.okay
        %td.link
          %a{href: server_app_path(1, 1)}
            %span.title
              =Faker::Lorem.words(1..3).join('_')
            %span.info
              updated
              %span.data=time_ago_in_words rand(120).minutes.ago
              ago
