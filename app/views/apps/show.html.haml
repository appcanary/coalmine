.navigation
  =render partial: "layouts/navbar"
#main.main-drawer
  .heading
    %h3
      %span=link_to "My Servers", dashboard_path
      \/
      %span.name Acme
      \/
      %span=link_to 'Apps', server_path(1)
      \/
      %span.name=Faker::Lorem.words(1..2).join('-')
      \/
      %span Packages
  .app

    .tabs.packages
      %a.tab.vulnerable.active(href="#vulnerable_artifacts")
        %span.fa.fa-exclamation-triangle.warn
        vulnerable packages
      %a.tab.all(href="#all_artifacts")
        all packages
    %table#vulnerable_artifacts.artifacts.vulnerable
      -rand(3..11).times do
        %tr.artifact
          %td.info
            .title.data
              =Faker::Lorem.words(1..3).join('_')
            .version
              version
              %span.data 2.0.1
            .kind
              kind:
              %span.data rubygem
          %td.vulnerabilities
            %ul
              -rand(1..8).times do
                %li.vulnerability
                  =link_to Faker::Lorem.words(5..16).join(' '), '#'

    %table#all_artifacts.artifacts.all(style="display:none")
      %tr
        %th name
        %th kind
        %th version
      -rand(16..50).times do
        %tr.artifact
          %td.name=Faker::Lorem.words(1..2).join('-')
          %td.kind rubygem
          %td.version
            ="#{rand(0..5)}.#{rand(0..3)}.#{rand(0..21)}"

:coffeescript
  $('.tabs .tab').click (e) ->
    e.preventDefault();
    $('table.artifacts').hide()
    $($(this).attr('href')).show()
    $('.tabs .tab').removeClass('active')
    $(this).addClass('active')
