<div class="app-sidepanel">
  <section>
    <div class="nav-identity">
      <p>
        <%= link_to "<b class='eui-trailing-icon fa fa-angle-double-left'></b> Dashboard".html_safe, dashboard_path, :class => "dashboard" %>
      </p>
      <h3><%= avatar(@app) %> <%= @app.name %></h3>
    </div>
  </section>
  <section>
    <div class="col-md-12">

      <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="#">Production</a></li>
        <li role="presentation"><a href="#">Staging</a></li>
        <li role="presentation"><a href="#">Dev</a></li>
      </ul>

      <table class="table unstyled info">
        <tr>
          <td>
            <strong>Platforms</strong>
          </td>
          <td class="platforms">
            <%= @app.platforms.join(", ") %>
          </td>
        </tr>

        <tr>
          <td>
            <strong>Rubygems</strong>
          </td>
          <td>
            35-40
          </td>
        </tr>

        <tr>
          <td>
            <strong>Last Updated</strong>
          </td>
          <td>
            <span class="timestamp" title='<%= @app.last_synced_at.iso8601 %>'><%= @app.last_synced_at %></span>
          </td>
        </tr>
      </table>

      <table class="table issues">
        <thead>
          <th>Issues</th>
        </thead>
        <tr>
          <td>
            Active
          </td>
          <td>
            2 <i class="fa fa-angle-right" />
          </td>
        </tr>

        <tr>
          <td>
            Resolved
          </td>
          <td>
            56 <i class="fa fa-angle-right" />
          </td>
        </tr>

        <tr>
          <td>
            Ignored
          </td>
          <td>
            3 <i class="fa fa-angle-right" />
          </td>
        </tr>
      </table>
    </div>
  </section>
</div>
<div id="app-timeline">
  <%= render :partial => "shared/box" %>
</div>
