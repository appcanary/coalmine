<div class="topbar"></div>
<div class="top-left-brand">
  <a href="https://appcanary.com">
    <%= image_tag "appcanary-hero.png", :alt => "appCanary" %>
  </a>
</div>


<div class="action">
  <div class="action_unit action_login">
    <%= link_to "Log in", login_path, :class => "button" %>
  </div>
</div>

<div class="hero-wrapper">
  <div class="sign-up-page">
    <div class="sign-up">
      <div class="riskfree">
        <h1>Hey there!</h1>
        <h2>It's nice to see you again.</h2>
        <% if @user.errors.present? %>
          <br/>
          <br/>
          <br/>
          <h2>Sorry! <%= @user.errors.full_messages.join(". ")%></h2>
        <% end %>
      </div>
      <%= render :partial => "form" %>
    </div>
  </div>
</div>
<%= render :partial => "shared/footer" %>
