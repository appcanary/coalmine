<div class="topbar"></div>
<div class="top-left-brand">
  <a href="https://appcanary.com">
    <%= image_tag "appcanary-hero.png", :alt => "Appcanary" %>
  </a>
</div>


<div class="action">
  <div class="action_unit action_sign-up">
    <%= link_to "Sign Up", sign_up_path, :class => "button" %>
  </div>
</div>

<div class="hero-wrapper">
  <div class="sign-up-page">
    <div class="sign-up">
      <div class="riskfree" style="text-align: center;">

        <% if flash.present? %>
          <h1 style="padding-bottom: 20px"><%= flash.to_hash.values.join(" ") %></h1>
        <% else %>
          <h1 style="padding-bottom: 20px">Nice to see you again.</h1>
        <% end %>
        <%= image_tag "canary-worm.medium.png", :style => "width: 65%" %>
      </div>
      <%= render :partial => "form" %>
    </div>
  </div>
</div>
<%= render :partial => "shared/footer" %>
