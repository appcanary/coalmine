<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="error_explanation" role="alert">
      <h4>Oops. We encountered an error:</h4>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= yield :user_form_title %>

  <div class="form-group">
    <%= f.email_field :email, :class => "form-control", :placeholder => "Your email address" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, :class => "form-control", :placeholder => "A password, or a secret between us" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "The same password again, just to confirm" %>
  </div>

  <% if sign_up %>
    <div class="form-group">
      <%= f.submit "Sign Up", :class => "btn btn-black" %>
      <%= link_to "Wait, nevermind", root_path, :class => "btn btn-default" %>
    <% end %>

  </div>
<% end %>

