<% if @onboarded %>
  <div id="dashboard">
    <section>
      <div class="col-sm-12">
        <p>
          At a glance: <%= at_a_glance(@monitors, @active_servers, @silent_servers) %>
      </p>
    </div>
  </div>

  <% if @monitors.present? %>
    <div class="monitors">
      <h3>Monitors</h3>
      <table class="table servers">
        <% @monitors.each do |monitor| %>
          <%= render :partial => "monitors/list", :locals => { :monitor => monitor } %>
      <% end %>
    </table>
  </div>
<% end %>

<% if @active_servers.present? %>
  <h3>Servers</h3>
  
  <table class="table servers">
    <% @active_servers.each do |server| %>
      <tr class="server">
        <%= render :partial => "servers/list", :locals => { :server => server } %>
      </tr>
    <% end %>
  </table>
<% end %>

<% if @silent_servers.present? %>
  <p>
    <strong> Psst! We haven't heard from these servers in a while:</strong>
  </p>
  <table class="table servers">
    <% @silent_servers.each do |server| %>
      <tr class="server">
        <%= render :partial => "servers/list", :locals => { :server => server } %>
      </tr>
    <% end %>
  </table>
<% end %>
</div>

<% else %>
  <section>
    <div class="col-sm-8">
      <div class="col-sm-4.col-sm-offset-2">
        <%= image_tag "canary-rough-egg.jpg", :style => "width: 250px" %>
      </div>
      <div class="empty_message col-sm-9">
        You don't have any servers yet!
        You should
        <%= link_to "add some", new_server_path %>
        and come back once you're done.
      </div>
    </div>
  </section>
<% end %>
