<% if current_user.onboarded? %>

  <% @events.each do |event| %>
    <% if event.app? %>
      <section>
        <div class="event-box">
          <div class="event-wrapper">
            <div class="event-header">
              <section>
                <div class="col-sm-12">
                  <p>ðŸŽ‰ You added a new app!</p>
                </div>
              </section>
            </div>
            <div class="event-description">
              <section>
                <div class="name">
                <p>
                  <%= image_tag("data:image.png;base64,#{event.avatar}", :class => "icon") %>
                  <strong><%= link_to event.app.name, apps_path(1) %></strong>
                </p>
              </div>

              <div class="platforms">
                <p>
                  <strong>
                    Platforms:
                  </strong>
                  <%= event.app.platforms.first %>
                </p>
              </div>

              <div class="last-deploy">
                <p>
                  <strong>
                    Deployed:
                  </strong>
                  <span class="last_synched_at timestamp" title="<%= event.app.last_synced_at.iso8601 %>"><%= event.app.last_synced_at %></span>
                </div>
              </section>
            </div>
          </div>
        </div>
      </section>
    <% end %>
  <% end %>


  <%= render :partial => "shared/box" %>
<% else %>
  <%= render :partial => "onboard" %>
<% end %>

